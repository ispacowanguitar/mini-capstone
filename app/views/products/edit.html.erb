<%= form_tag "/products/#{@product.id}" , method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag(:name, "#{@product.name}", {class: "form-control", placeholder: "Enter in the name of your product"})%>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, "#{@product.price}", class: "form-control", placeholder: "Enter the chef's name here!" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, "#{@product.images}", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, "#{@product.description}", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :supplier_id %>
    <%= text_field_tag :supplier_id, "Supplier", class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Send', class: "btn btn-default" %>
  </div>
<% end %>