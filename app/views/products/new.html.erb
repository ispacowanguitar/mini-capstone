<%= form_tag'/products', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag(:name, nil, {class: "form-control", placeholder: "Enter in the name of your product"})%>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: "form-control", placeholder: "Enter the chef's name here!" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: "form-control", placeholder: "Enter the URL of an image" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: "form-control", placeholder: "Enter a description here" %>
  </div>
  <div>
    <%= button_tag 'DOITTTTTT', class: "btn btn-default" %>
  </div>
<% end %>